._embed {
    position: relative;
    display: block;
    width: 100%;
    padding: 0;
    overflow: hidden;

    &::before {
        display: block;
        content: '';
    }

    > ._embed-item,
    iframe,
    embed,
    object,
    video {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
    }
}

._embed-21by9 {
    &::before { padding-top: percentage(9 / 21); }
}

._embed-16by9 {
    &::before { padding-top: percentage(9 / 16); }
}

._embed-4by3 {
    &::before { padding-top: percentage(3 / 4); }
}

._embed-1by1 {
    &::before { padding-top: percentage(1 / 1); }
}

.section-wrapper
    width: 100%
    display block

    &.-primary
        background: $accentColor


.section
    padding 4rem 0
    max-width $homePageWidth
    margin 0 auto
    display block

    @media (max-width: 1170px)
        padding: 3rem 1rem

    @media (max-width: $MQMobile)
        padding: 3rem 1rem


